#!/usr/bin/env bash

set -ex

mkdir -p "${BOSH_INSTALL_TARGET}/bin"

source /var/vcap/packages/golang-*-linux/bosh/compile.env

export NATS_SMOKE_PATH="${GOPATH}/src/natsbench"

mkdir -p "${NATS_SMOKE_PATH}"
cp -R natsbench/* "${NATS_SMOKE_PATH}"

pushd "${NATS_SMOKE_PATH}"
  go build -o "${BOSH_INSTALL_TARGET}/bin/natsbench" .
popd
