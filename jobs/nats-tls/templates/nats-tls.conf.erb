<%
  class NatsPeer
    def initialize(address, cluster_port, username, password)
      @address = address
      @cluster_port = cluster_port
      @username = username
      @password = password
    end

    def url
      "nats-route://#{@username}:#{@password}@#{@address}:#{@cluster_port}"
    end
  end

  nats_peers = nil
  if_p("nats.machines") do |ips|
    nats_peers = ips.map do |ip|
      NatsPeer.new(ip, p("nats.cluster_port"), p("nats.user"), p("nats.password"))
    end
  end

  unless nats_peers
    nats_peers = []
    if_link("nats") do |nats_link|
      nats_peers += nats_link.instances.map do |instance|
        NatsPeer.new(instance.address, nats_link.p("nats.cluster_port"), nats_link.p("nats.user"), nats_link.p("nats.password"))
      end
    end

    if_link("nats-tls") do |nats_tls_link|
      nats_peers += nats_tls_link.instances.map do |instance|
        NatsPeer.new(instance.address, nats_tls_link.p("nats.cluster_port"), nats_tls_link.p("nats.user"), nats_tls_link.p("nats.password"))
      end
    end
  end
%>

net: "<%= spec.address %>"
port: <%= p("nats.port") %>
prof_port: <%= p("nats.prof_port") %>
monitor_port: <%= p("nats.monitor_port") %>

debug: <%= p("nats.debug") %>
trace: <%= p("nats.trace") %>
logtime: true

authorization {
  user: "<%= p("nats.user") %>"
  password: "<%= p("nats.password") %>"
  timeout: <%= p("nats.authorization_timeout") %>
}

tls {
  ca_file: "/var/vcap/jobs/nats-tls/config/external_tls/ca.pem"
  cert_file: "/var/vcap/jobs/nats-tls/config/external_tls/certificate.pem"
  key_file: "/var/vcap/jobs/nats-tls/config/external_tls/private_key.pem"
  cipher_suites: [
    "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
    "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
  ]
  curve_preferences: [
    "CurveP384"
  ]
  timeout: 5 # seconds
  verify: true
}

cluster {
  host: "<%= spec.address %>"
  port: <%= p("nats.cluster_port") %>

  authorization {
    user: "<%= p("nats.user") %>"
    password: "<%= p("nats.password") %>"
    timeout: <%= p("nats.authorization_timeout") %>
  }

  <% if p("nats.internal.tls.enabled") -%>
  tls {
    ca_file: "/var/vcap/jobs/nats-tls/config/internal_tls/ca.pem"
    cert_file: "/var/vcap/jobs/nats-tls/config/internal_tls/certificate.pem"
    key_file: "/var/vcap/jobs/nats-tls/config/internal_tls/private_key.pem"
    cipher_suites: [
      "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
      "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
    ]
    curve_preferences: [
      "CurveP384"
    ]
    timeout: 5 # seconds
    verify: true
  }
  <% end -%>

  routes = [
    <% nats_peers.each do |peer| %>
    <%= peer.url %>
    <% end %>
  ]
}
