#!/bin/bash


<% if p("nats.cluster_migration.from_port") != p("nats.port") %>
echo "updating iptables rules"
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport "<%= p("nats.cluster_migration.from_port") %>" -j REDIRECT --to-port "<%= p("nats.port") %>"
<% end %>

while sleep 86400; do
  echo Sleeping another day
done
